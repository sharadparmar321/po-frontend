{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "extends": ["plugin:react/recommended", "airbnb", "react-app", "react-app/jest"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "js": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-multiple-empty-lines": [
      "error",
      { "max": 1, "maxBOF": 1, "maxEOF": 1 }
    ],
    "comma-dangle": ["error", "never"],
    "linebreak-style": "off",
    "quotes": ["error", "double"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "required": {
          "some": [ "nesting", "id" ]
        }
      }
    ]
  }
}